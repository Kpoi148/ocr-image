{
  "manifest_version": 3,
  "name": "OCR Text Extractor",
  "version": "1.0",
  "description": "Trích xuất text từ ảnh dễ dàng.",
  "permissions": ["activeTab", "scripting", "contextMenus", "offscreen", "storage"],  
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/content-ocr.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/tesseractjs/worker.min.js",
        "assets/tesseractjs/tesseract-core.wasm.js",
        "assets/tesseractjs/tesseract-core.wasm",
        "assets/tesseractjs/tesseract-core-simd.wasm.js",
        "assets/tesseractjs/tesseract-core-simd.wasm",
        "assets/tesseractjs/lang-data/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon.png",  
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon.png",
    "48": "assets/icons/icon.png",
    "128": "assets/icons/icon.png"
  }
}
